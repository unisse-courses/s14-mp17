<div class="row-container search">

  <!-- SEARCH -->
  <div class="col-sm-12">
    <div class="heading">
        <h4>{{ title }}</h4>
        <a href='/usermanagebooking' class="btn btn-primary">Back</a>
    </div>

    <form action="/usercreatebooking">
      <table class="table table-borderless">
        <tr>
          <td><label>Select a Hotel</label></td>
          <td><label>Check In</label></td>
          <td><label>Check Out</label></td>
          <td><label>Capacity</label></td>
        </tr>
        <tr>
          <td>
            <!--
            <select class="form-control" id="hotelSearch" name="hotelSearch">
              <option value="Bayfront Hotel" name="Bayfront Hotel">Bayfront Hotel</option>
              <option value="Belmont Hotel" name="Belmont Hotel">Belmont Hotel</option>
              <option value="Dusit Thani" name="Dusit Thani">Dusit Thani</option>
              <option value="Heritage Hotel" name="Heritage Hotel">Heritage Hotel</option>
            </select>
            -->
            <input class="form-control" type="text" placeholder="Enter Booking ID" aria-label="Search" id="userSearchID" name="hotelSearch" method="GET">
          </td>
          <td class="dates">
            <input type="date" name="checkin" class="form-control" id="checkin">
          </td>
          <td class="dates">
            <input type="date" name="checkout" class="form-control" id="checkout">
          </td>
          <td class="cap">
            <select class="form-control" id="capacity">
                <option value="1" selected>1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select>
          </td>
          <td>
            <button class="btn btn-primary" id="showSearchBooking" type="submit">Search</button>
          </td>
        </tr>
      </table>
    </form>
  </div>
</div>

