<div id="register" class="row-container">
  <form class="form-div" action="/register" method="POST">
      <div class="row">
        <div class="col s12">
          <p class="text-center card-title">{{title}}</p>
        </div>
      </div>
      {{> messages}}
      <div class="row">
        <div class="col s12 input-field">
          <input placeholder="Firstname Lastname" type="text" id="name" name="name">
        </div>
      </div>
      <div class="row">
        <div class="col s12 input-field">
          <input placeholder="Email Address" type="email" id="email" name="email">
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <input placeholder="Password" type="password" id="password" name="password">
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <input placeholder="Confirm Password" type="password" id="confirmPass" name="confirmPass">
        </div>
      </div>
      <div class="row center-align">
        <div class="col s12">
          <button class="waves-effect waves-light btn">Register</button>
        </div>
      </div>
      <div class="row center-align">
        <div class="col s12">
          <p>Already have an account?<a href="/login">Login</a>.</p>
        </div>
      </div>
  </form>
</div>
