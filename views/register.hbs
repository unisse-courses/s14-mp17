<div id="register" class="row container">
  <form class="col s8 offset-s2 card" action="/register" method="POST">
    <div class="card-content">
      <div class="row">
        <div class="col s12">
          <p class="center-align card-title">Create Your Account</p>
        </div>
      </div>
      {{> messages}}
      <div class="row">
        <div class="col s12 input-field">
          <label for="name">Name</label>
          <input placeholder="John Appleseed" type="text" id="name" name="name">
        </div>
      </div>

      <div class="row">
        <div class="col s12 input-field">
          <label for="email">Email Address</label>
          <input placeholder="email@domain.com" type="email" id="email" name="email">
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <label for="password">Password</label>
          <input placeholder="password" type="password" id="password" name="password">
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <label for="password">Re-enter password</label>
          <input placeholder="confirm password" type="password" id="confirmPass" name="confirmPass">
        </div>
      </div>

      <div class="row center-align">
        <div class="col s12">
          <button class="waves-effect waves-light btn">Sign Up</button>
        </div>
      </div>

      <div class="row center-align">
        <div class="col s12">
          <p>Already registered? <a href="/login">Login</a>.</p>
        </div>
      </div>
    </div>
  </form>
</div>
