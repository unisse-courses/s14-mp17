<div id="login" class="row-container form-div">
  <form class="col s8 offset-s2 card" action="/login" method="POST">
    <div class="card-content">
      <div class="row">
        <div class="col s12">
          <p class="card-title center-align">{{title}}</p>
        </div>
      </div>
      {{> messages}}
      <div class="row">
        <div class="col s12 input-field">
          <input placeholder="Email Address" type="email" id="email" name="email" />
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <input placeholder="Password" type="password" id="password" name="password" />
        </div>
      </div>

      <div class="row  center-align">
        <div class="col s12">
          <button class="waves-effect waves-light btn">Login</button>
        </div>
      </div>

      <div class="row center-align">
        <div class="col s12">
          <p>Don't have an account yet? <a href="/register">Register</a>.</p>
        </div>
      </div>
    </div>
  </form>
</div>
