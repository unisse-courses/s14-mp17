<div class="row-container search-results">
    <div class="col-sm-12">
        <h4>{{ title }}</h4>
        {{#if bookings}}
            <div class="row">
            {{#each bookings}}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ hotelname }}</h5>
                        <p class="card-text">Booking Number: {{ _id }}</p>
                        <p class="card-text">Status: {{ status }}</p>
                        <p class="card-text">Capacity: {{ capacity }}</p>
                        <a href="/register" class="btn btn-primary">Book Now!</a>
                    </div>
                </div>
            {{/each}}
            </div>
            {{else}}
        <h4>No bookings yet!</h4>
        {{/if}}
    </div>
</div>