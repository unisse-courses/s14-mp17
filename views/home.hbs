<!-- VIEW AVAILABLE HOTELS -->
<div class="row-container available-hotels">
  <div class="col-sm-12">
    <h4>Available Hotels</h4>
    
     <div class="card-group">
    {{#if hotels}}
        <!-- loop through lists -->
        {{#each hotels}}
        <div class="card">
          <img class="card-img-top" src="{{ img }}">
          <div class="card-body">
            <h5 class="card-title">{{ name }}</h5>
            <p class="card-text">{{ address }}</p>
            <p class="card-text">Starts at Php {{ price }}!</p>
          </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <h6>No hotels yet</h6>
    {{/if}}

  </div>
</div>
