<div class="row search">

  <!-- SEARCH -->
  <div class="col-sm-12">
    <h4>{{title}}</h4>
    <p>From cozy rooms and warm baths to great food and funky cities.</p>
    <form>
      <table class="table table-borderless">
        <tr>
          <td><label>Select a Hotel</label></td>
          <td><label>Check In</label></td>
          <td><label>Check Out</label></td>
          <td><label>Capacity</label></td>
        </tr>
        <tr>
          <td>
            <select class="form-control" id="hotelSearch">
              <option value="Bayfront Hotel Cebu">Bayfront Hotel Cebu</option>
              <option value="Dusit Thani Mactan Cebu">Dusit Thani Mactan Cebu</option>
              <option value="Heritage Hotel Manila">Heritage Hotel Manila</option>
              <option value="Hop Inn Hotel Ermita Manila">Hop Inn Hotel Ermita Manila</option>
              <option value="Makati Diamond Residences">Makati Diamong Residences</option>
              <option value="Manila Hotel">Manila Hotel</option>
              <option value="Marco Polo Plaza Cebu">Marco Polo Plaza Cebu</option>
              <option value="Marriot Hotel Manila">Marriot Hotel Manila</option>
              <option value="Okada Manila">Okada Manila</option>
              <option value="Richmonde Hotel Ortigas">Richmonde Hotel Ortigas</option>
              <option value="Shangri-la Manila">Shangri-la Manila</option>
              <option value="Waterfront Hotel Cebu">Waterfront Hotel Cebu</option>
            </select>
          </td>
          <td class="dates">
            <input type="date" name="checkin" class="form-control" id="checkin">
          </td>
          <td class="dates">
            <input type="date" name="checkout" class="form-control" id="checkout">
          </td>
          <td class="cap">
            <select class="form-control" id="capacity">
                <option value="1" selected>1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
              </select>
          </td>
          <td>
            <button class="btn btn-primary" id="submit" type="submit">Search</button>
          </td>
        </tr>
      </table>
    </form>
  </div>
</div>

<!-- VIEW AVAILABLE HOTELS -->
<div class="row available-hotels">
  <div class="col-sm-12">
    <h4>Available Hotels</h4>
    <div class="card-deck">
      {{#each batchone}}
      <div class="card">
        <img class="card-img-top" src="{{this.image}}">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.location}}</p>
          <p class="card-text">{{this.price}}</p>
        </div>
      </div>
      {{/each}}
    </div>
    <div class="card-deck">
      {{#each batchtwo}}
      <div class="card">
        <img class="card-img-top" src="..." alt="Card image cap">
        <div class="card-body">
