<div id="admin" class="row-container">
  <form class="form-div" action="/admin" method="POST">
      <div class="row">
        <div class="col s12">
          <h4>{{title}}</h4>
        </div>
      </div>
      {{> messages}}
      <div class="row">
        <div class="col s12">
          <input placeholder="Username" type="text" id="username" name="username" />
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <input placeholder="Password" type="password" id="password" name="password" />
        </div>
      </div>

      <div class="row text-center">
        <div class="col s12">
          <button class="btn btn-primary form-button">Login</button>
        </div>
      </div>
  </form>
</div>